  //canvas 
  sc_epo_jquery(document).ready(function(){
    var mySVG = document.getElementsByTagName("svg");

    if(mySVG.length > 0){
      sc_epo_jquery.each(mySVG, function( index, value ) {
        var hasAttWidth = value.hasAttribute('width');
        var hasAttHeight = value.hasAttribute('height');  

        var getBoxSize = value.viewBox.baseVal; 

        if(getBoxSize && !hasAttWidth){
          value.setAttribute('width', getBoxSize.width);
        }

        if(getBoxSize && !hasAttHeight){
          value.setAttribute('height', getBoxSize.height);
        }
      });
    }
