  //recording start
  rrwebRecord({
    emit(event) {
      recordingEventsArray.push( event );
      
      if(currentShopSettings != null){
        if(currentShopSettings.is_record_active == 'yes'){
          
          if(sessionStorage.getItem('sessionEvents') === null){
            sessionStorage.setItem('sessionEvents', JSON.stringify(recordingEventsArray));
          }
          else{
            var eventsArray = [];
            eventsArray = JSON.parse(sessionStorage.getItem('sessionEvents'));
            eventsArray.push.apply(eventsArray, recordingEventsArray);
            
            sessionStorage.removeItem("sessionEvents");
            sessionStorage.setItem('sessionEvents', JSON.stringify(eventsArray));
          }
          
          recordingEventsArray = [];
        }
      }
    },
  });

  function saveWebSessionData() {
    if(currentShopSettings != null){
      if(sessionStorage.getItem('sessionEvents') !== null && currentShopSettings.is_record_active == 'yes'){
        const body = sessionStorage.getItem('sessionEvents');
        
        var device_name = 'Desktop';
        var page_name = '';
        var device_resolution = '';
        var domain_name = '';

        if(isMobile()){
          device_name = 'Mobile';
        }

        if(isMobileTablet()){
          device_name = 'Tablet';
        }

        if(sc_epo_jquery('#sessionApp_page_name').length>0){
          page_name = sc_epo_jquery('#sessionApp_page_name').val(); 
        }

        if(sc_epo_jquery('#sessionApp_domain_name').length>0){
          domain_name = sc_epo_jquery('#sessionApp_domain_name').val(); 
        }

        device_resolution = window.screen.width +'x'+ window.screen.height; 

        sessionStorage.removeItem("sessionEvents");

        sc_epo_jquery.ajax({
          url: '/apps/visitor-insights-app/ajax/web-session-save',
          type: 'POST',
          cache: false,
          data: {body : body, device : device_name, device_resolution: device_resolution, page_name : page_name, random_id : sessionStorage.getItem('recordSessionApp'), page_url: window.location.href, domain_name: domain_name },

          success: function(data){
            //console.log(data);
          },
          error:function(){ console.log('Something went wrong for recording session save');}
        });
      }
    }
  }


  function toBeExecutedOnFirstLoad(){
    if(sessionStorage.getItem('recordSessionApp') === null){
      sessionStorage.setItem('recordSessionApp', generateID());
    }

    if(sessionStorage.getItem('heatmapSessionApp') === null){
      sessionStorage.setItem('heatmapSessionApp', generateID());
    }

    setInterval(saveWebSessionData, 10 * 1000);
  }


  window.onload = toBeExecutedOnFirstLoad;

  
  //heatmap start
  var heatmapEvent = [];

  sc_epo_jquery(document).ready(function(){
    
    var pageURL = sc_epo_jquery(location).attr("href");

    function saveMousePos(event) {
      if(currentPageStatus.success == true && currentPageStatus.page_status == 0 && !isMobile() && !isMobileTablet()){
        var newX = Math.round((event.pageX * 1280) / window.screen.width) ;  
        //var newY = Math.round((event.pageY * 600) / window.screen.height);  

        var data = [ newX, event.pageY, 1 ];
        heatmapEvent.push(data);
      }
    }

    document.addEventListener("click", saveMousePos);

    function saveHeatmapEventsData(){

      if(heatmapEvent.length> 0){
        const body = JSON.stringify(heatmapEvent);

        heatmapEvent = [];

        sc_epo_jquery.ajax({
          url: '/apps/visitor-insights-app/ajax/heatmaps-events-save',
          type: 'POST',
          cache: false,
          data: {body : body, page_url : pageURL, device_resolution: window.screen.width +'x'+ window.screen.height, random_id : sessionStorage.getItem('heatmapSessionApp')},

          success: function(data){
            //currentPageStatus = data;
          },
          error:function(){ console.log('Something went wrong for heatmap event saved');}
        });
      }

    }

    setInterval(saveHeatmapEventsData, 10 * 1000);

    //Get heatmaps for current url
    sc_epo_jquery.ajax({
      url: '/apps/visitor-insights-app/ajax/current-page-details',
      type: 'GET',
      cache: false,
      datatype: 'json',
      data: {page_url : pageURL},

      success: function(data){
        currentPageStatus = data;

        if(currentPageStatus.screenshot == 'not_all_taken'){
          html2canvas(document.body, 
                      {
            allowTaint: true, 
            useCORS: true, 
            width:1280, 
            windowWidth:1280, 

          }).then(canvas => {
            if (canvas.toBlob) {
              canvas.toBlob(function(blob) {
                var data = new FormData();
                data.append("page_screenshot", blob);
                data.append("page_url", pageURL);

                xhr = new XMLHttpRequest();            
                xhr.open("post", "/apps/visitor-insights-app/ajax/save-page-screenshot", true);            
                xhr.onreadystatechange = function() {
                  if (xhr.readyState === 4) {
                    //console.log(xhr.responseText);
                  }
                };

                xhr.send(data);

              }, 'image/png')
            }
          });
        }
      },
      error:function(){ console.log('Something went wrong for gettings current page');}
    });

    sc_epo_jquery.ajax({
      url: '/apps/visitor-insights-app/ajax/current-settings',
